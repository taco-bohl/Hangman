package Hangman;

import java.awt.Color;
import java.awt.Graphics;

/**
 *
 * @author Tyler Bohl
 */
public class Gallows {
    private int xPosition;
    private int yPosition;
    public void drawPlatform(Graphics g, int x, int y)
    {
        x = xPosition;
        y = yPosition;
        g.setColor(Color.BLACK);
        g.fillRect(x, y, 100, 50);
    }
    public void drawNoose(Graphics g, int x, int y)
    {
        x = xPosition;
        y = yPosition;
        g.setColor(Color.black);
        g.fillRect(x, y, 10, 100);
        g.fillRect(x, y+100, 10, 100);
        g.fillRect(x+50, y+70, 10, 10);
    }
    
            
            
    
}
