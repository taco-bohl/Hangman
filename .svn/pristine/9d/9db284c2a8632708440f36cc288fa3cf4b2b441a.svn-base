package Hangman;

import java.awt.Color;
import java.awt.Graphics;

/**
 *
 * @author Tyler Bohl
 */
public class Figure {
    private int xPosition;
    private int yPosition;
    private Color color;
    
    public void drawHead(Graphics g, int x, int y)
    {
        
        x = xPosition;
        y = yPosition;
        g.setColor(Color.BLACK);
        g.fillOval(x, y, 10, 10);
    }
    public void drawLimb(Graphics g, int x, int y)
    {
        x = xPosition;
        y = yPosition;
        g.setColor(Color.BLACK);
        g.drawLine(x, y, 10, 10);
    }
    
}
